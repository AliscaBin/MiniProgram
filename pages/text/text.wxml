<!--pages/text/text.wxml-->
<text>hello text\n</text>
<text>你好 文本，类似于HTML中的span\n</text>

<!--1.selectable: true-->
<!--默认情况下text中的文本长按是不能选中,默认该属性为true-->
<text selectable='{{true}}'>Hello Text\n</text>

<!--2.space: 决定文本空格的大小-->
<!--nbsp:一个字符的大小-->
<!--ensp:半个中文字符的大小-->
<!--emsp:一个中文字符的大小-->
<text space="nbsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>

<!--3.decode: 是否解码-->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3\n</text>