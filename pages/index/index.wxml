<!-- 7.1 单个插槽的使用 slot -->
<view>"-----------------------------"</view>
<my-slot>
  <button size="mini">我是中间的按钮</button>
</my-slot>
<view>"-----------------------------"</view>
<my-slot>
  <text>哈哈哈</text>
</my-slot>
<view>"-----------------------------"</view>
<my-slot>
  <slider show-value></slider>
</my-slot>
<view>"-----------------------------"</view>

<!-- 7.2 多个插槽的使用 slot 
注意事项：
    1.给每一个插槽起一个名字:添加name属性
    2.必须在Component对象中添加一个选项：options: multipleSlots:true
-->
<my-mult-slot>
  <button size="mini" slot="slot2">我是插入的按钮</button>
  <slider slot="slot1"></slider>
  <text slot="slot3">哈哈</text>
</my-mult-slot>

<view>"----------------"</view>

<button bindtap="handleChange">切换显示</button>
<block wx:if="{{isShow}}">
  <my-mult-slot>
    <button size="mini" slot="slot2">我是插入的按钮</button>
    <slider slot="slot1"></slider>
    <text slot="slot3">哈哈</text>
  </my-mult-slot>
</block>